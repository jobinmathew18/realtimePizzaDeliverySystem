<section class="status">
    <div class="container mx-auto">
        <div class="status-box e-full lg:w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl font-bold">Track Delivery System</h1>
                <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-xs"><%=order._id%></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">       <!--converting object into string because "value" always takes string as its value-->
            </div>
            <ul>
                <li class="status_line text-sm md:text-xl pb-16" data-orderstatus="Order_placed"><span>Order Placed</span></li>
                <li class="status_line text-sm md:text-xl pb-16" data-orderstatus="confirmed"><span>Order Confirmation</span></li>
                <li class="status_line text-sm md:text-xl pb-16" data-orderstatus="prepared"><span>Preparation</span></li>
                <li class="status_line text-sm md:text-xl pb-16" data-orderstatus="delivered"><span>Out for delivery</span></li>
                <li class="status_line text-sm md:text-xl" data-orderstatus="order_completed"><span>Complete</span></li>
            </ul>
        </div>
    </div>
</section>